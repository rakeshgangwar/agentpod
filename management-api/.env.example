# Management API Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Server
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# Authentication
# =============================================================================
# API token for authenticating requests from mobile app
API_TOKEN=your-secret-token-change-in-production

# =============================================================================
# Coolify
# =============================================================================
# Coolify dashboard URL (use Tailscale IP in production)
COOLIFY_URL=https://admin.superchotu.com

# Coolify API token (generate from Keys & Tokens in Coolify dashboard)
COOLIFY_TOKEN=your-coolify-api-token

# UUID of the Coolify project for OpenCode containers
COOLIFY_PROJECT_UUID=uuid-of-opencode-project

# UUID of the VPS server in Coolify
COOLIFY_SERVER_UUID=uuid-of-vps-server

# =============================================================================
# Forgejo
# =============================================================================
# Forgejo API URL (internal, used for API calls)
FORGEJO_URL=https://forgejo.superchotu.com:3000

# Forgejo public URL (external, used for git clone from containers)
# This should be the HTTPS URL without port, accessible via Traefik
FORGEJO_PUBLIC_URL=https://forgejo.superchotu.com

# Forgejo API token (generate from Settings > Applications)
FORGEJO_TOKEN=your-forgejo-api-token

# Default owner for repositories
FORGEJO_OWNER=rakeshgangwar

# =============================================================================
# OpenCode
# =============================================================================
# Docker image for OpenCode containers
OPENCODE_IMAGE=opencode-server:latest

# Base port for OpenCode containers (each project gets port = basePort + offset)
OPENCODE_BASE_PORT=4001

# =============================================================================
# Database
# =============================================================================
# Path to SQLite database file
DATABASE_PATH=./data/database.sqlite

# =============================================================================
# Deployment (for scripts/deploy.sh)
# =============================================================================
# UUID of the Management API application in Coolify (set after first deployment)
MANAGEMENT_API_UUID=
