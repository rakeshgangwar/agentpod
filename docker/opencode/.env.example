# OpenCode Container Environment Variables
# Copy this file to .env and fill in your values

# OpenCode server settings
OPENCODE_PORT=4096

# LLM Provider API Keys (set at least one)
ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# GOOGLE_API_KEY=

# Git configuration for commits made by OpenCode
GIT_USER_EMAIL=opencode@local
GIT_USER_NAME=OpenCode

# Forgejo repository (optional - leave empty for local workspace only)
FORGEJO_URL=https://forgejo.superchotu.com
FORGEJO_REPO_URL=
FORGEJO_USER=
FORGEJO_TOKEN=
