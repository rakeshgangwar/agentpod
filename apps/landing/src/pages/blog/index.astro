---
import { getCollection } from "astro:content";
import ModernLayout from "../../layouts/ModernLayout.astro";
import Header from "../../components/modern/Header.astro";
import Footer from "../../components/modern/Footer.astro";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

function calculateReadTime(content: string): number {
  const wordsPerMinute = 200;
  const words = content.trim().split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<ModernLayout title="Blog — AgentPod" description="Thoughts on portable AI sandboxes, development tools, and building in public">
  <Header slot="header" variant="solid" />
  
  <!-- Blog Header -->
  <section class="pt-32 pb-16 px-6">
    <div class="container-wide mx-auto">
      <div class="max-w-3xl animate-fade-in-up">
        <p class="eyebrow mb-4">Insights & Stories</p>
        <h1 class="display-lg mb-6">Blog</h1>
        <p class="subheadline max-w-2xl">
          Thoughts on portable AI sandboxes, development patterns, and building in public.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="pb-24 px-6">
    <div class="container-wide mx-auto">
      <div class="grid grid-cols-1 gap-8 max-w-5xl">
        {sortedPosts.map((post, index) => {
          const readTime = calculateReadTime(post.body);
          const formattedDate = formatDate(post.data.date);
          
          return (
            <article 
              class={`card group cursor-pointer animate-fade-in-up delay-${Math.min(index + 1, 6) * 100}`}
            >
              <a href={`/blog/${post.id}`} class="block">
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-4">
                  <div class="flex items-center gap-4 text-sm text-foreground-muted">
                    <time datetime={post.data.date}>{formattedDate}</time>
                    <span>·</span>
                    <span>{readTime} min read</span>
                  </div>
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="badge text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
                
                <h2 class="headline text-2xl mb-3 group-hover:text-accent-sienna transition-colors">
                  {post.data.title}
                </h2>
                
                <p class="text-foreground-muted leading-relaxed mb-4">
                  {post.data.excerpt}
                </p>
                
                <div class="flex items-center justify-between">
                  <span class="text-sm text-foreground-muted">
                    by {post.data.author}
                  </span>
                  <span class="text-accent-sienna text-sm font-medium group-hover:translate-x-1 transition-transform inline-flex items-center gap-1">
                    Read article
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      <!-- Empty State (if no posts) -->
      {sortedPosts.length === 0 && (
        <div class="card text-center py-16 max-w-2xl mx-auto">
          <p class="text-foreground-muted text-lg">
            No posts published yet. Check back soon for insights and updates.
          </p>
        </div>
      )}
    </div>
  </section>

  <Footer slot="footer" />
</ModernLayout>
