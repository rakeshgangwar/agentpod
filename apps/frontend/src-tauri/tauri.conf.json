{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "agentpod",
  "version": "0.1.0",
  "identifier": "dev.agentpod.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build",
    "features": ["voice"]
  },
  "app": {
    "windows": [
      {
        "title": "Agentpod",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": "9DC6VWV9X4"
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
