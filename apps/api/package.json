{
  "name": "@agentpod/api",
  "version": "0.1.0",
  "description": "Agentpod Management API - orchestrates projects, containers, and credentials",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --external cpu-features --external ssh2",
    "test": "bun test tests/unit && bun test tests/integration",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/scripts/seed-knowledge.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@agentpod/tsconfig": "workspace:*",
    "@agentpod/types": "workspace:*",
    "@hono/zod-validator": "^0.7.6",
    "@iarna/toml": "^2.2.5",
    "@opencode-ai/sdk": "^1.0.185",
    "@types/dockerode": "^3.3.47",
    "better-auth": "^1.4.7",
    "dockerode": "^4.0.9",
    "drizzle-orm": "^0.45.1",
    "gray-matter": "^4.0.3",
    "hono": "^4.11.1",
    "isomorphic-git": "^1.36.1",
    "nanoid": "^5.0.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.76"
  }
}
