{
  "name": "agentpod",
  "version": "0.1.0",
  "description": "Portable Command Center for AI Coding Agents",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@agentpod/frontend",
    "dev:api": "turbo run dev --filter=@agentpod/api",
    "dev:landing": "turbo run dev --filter=@agentpod/landing",
    "build": "turbo run build",
    "check": "turbo run check",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "tauri": "pnpm --filter @agentpod/frontend tauri"
  },
  "devDependencies": {
    "turbo": "^2.7.4",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd"
}
